<div id="page-content">
  <h1 xmlns="http://www.w3.org/1999/html" class="center mt-4">Log in</h1>

  <div class="container">
    <%#= render 'shares/errors', obj: @user %>
    <div class='row mt-4 mb-4'>
      <div class='col-md-12'>
        <%= form_with scope: :session, url: login_path, local: true do |f| %>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
              <%= f.label :email, class: "font-weight-bold" %>
            </div>
            <div class="col-sm-8">
              <%= f.email_field :email, class: "form-control", placeholder: "Enter a email", autofocus: true %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
              <%= f.label :password, class: "font-weight-bold" %>
            </div>
            <div class="col-sm-8">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter your password", autofocus: true %>
            </div>
          </div>
          <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
              <%= f.submit "Log in", class: "btn btn-danger btn-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>