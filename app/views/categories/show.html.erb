<div id="page-content">
  <h2 xmlns="http://www.w3.org/1999/html" class="center mt-4">Category: <%= @category.name %> </h2>

  <% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4 mb-4">
      <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render 'articles/article' %>
  <% if @category.articles.count > 0 %>
    <div class="row justify-content-center mt-2 mb-4">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>
