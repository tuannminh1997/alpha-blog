<div id="page-content">
  <h1 xmlns="http://www.w3.org/1999/html" class="center mt-4">Listing all categories</h1>
  <div class="container">
    <% @categories.each do |category| %>
      <div class="row justify-content-center">
        <div class="col-6 mt-2">
          <div class="card text-center shadow mb-2 bg-white rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-danger" %></h5>
              <%= pluralize(category.articles.count, 'article') %>
            </div>
<!--            <div class="card-header text-muted">-->
<!--              <small>-->
<!--                Created <%#= time_ago_in_words(category.created_at) %> ago,-->
<!--                edited <%#= time_ago_in_words(category.updated_at) %> ago-->
<!--              </small>-->
<!--            </div>-->
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @categories.count > 0 %>
    <div class="row justify-content-center mt-2 mb-4">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</div>


