<div class="container">
  <%= render 'shares/errors', obj: @article%>
  <div class='row mt-4 mb-4'>
    <div class='col-md-12'>
      <%= form_with model: @article, local: true do |f| %>
        <div class="form-group row">
          <div class="col-sm-2 col-form-label">
            <%= f.label :title, class: "font-weight-bold" %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2 col-form-label">
            <%= f.label :description, class: "font-weight-bold" %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2 ">
            <%= f.label :category, class: "font-weight-bold" %>
          </div>
          <div class="col-sm-8">
            <%= f.select :category_ids, Category.all.collect { |c| [ c.name, c.id ] }, {prompt: "Make your selection from the list below (can be empty)"},
                         {multiple: true, class: "custom-select", size: 3}%>
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit class: "btn btn-danger btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>