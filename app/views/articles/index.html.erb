<h1 xmlns="http://www.w3.org/1999/html" align="center">Listing all article</h1>

<% @article.each do |article| %>
  <div class="row all-article">
    <div class="col-sm-8 offset-sm-2">
      <div class="card card-body bg-light col-sm-8 offset-sm-2">
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="article-body">
          <%= (truncate(article.description, length: 100) { link_to "Continue", "#{article_path(article)}" }) %>
        </div>
        <div class="article-action">
          <%= link_to "Edit this article", edit_article_url(article), class: "btn btn-sm btn-primary" %>
          <%= link_to "Delete this article", article_path(article), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Do you want to delete this article ?" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>