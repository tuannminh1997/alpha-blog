<h2 align="center">Title: <%= @article.title %></h2>

<div class="card card-body bg-light col-sm-8 offset-sm-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-action">
    <%= link_to "View all articles", articles_path, class:"btn btn-sm btn-success" %>
    <%= link_to "Edit this article", edit_article_url(@article), class:"btn btn-sm btn-primary" %>
    <%= link_to "Delete this article", article_path(@article), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "Do you want to delete this article ?"} %>
  </div>
</div>